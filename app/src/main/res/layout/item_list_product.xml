<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/itemtextViewProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Produto x"
        app:layout_constraintStart_toEndOf="@+id/imageViewItem"
        app:layout_constraintTop_toTopOf="@+id/imageViewItem" />

    <TextView
        android:id="@+id/itemTextViewDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Esse produto veio com o problema X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemtextViewProduct"
        app:layout_constraintTop_toBottomOf="@+id/itemtextViewProduct" />

    <TextView
        android:id="@+id/itemTextViewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15/10/2020"
        app:layout_constraintStart_toStartOf="@+id/itemTextViewDescription"
        app:layout_constraintTop_toBottomOf="@+id/itemTextViewDescription" />

    <ImageView
        android:id="@+id/imageViewItem"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo" />
</androidx.constraintlayout.widget.ConstraintLayout>